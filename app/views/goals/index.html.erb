<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table>
  <thead>
    <tr>
      <th>Goalname</th>
      <th>Deadline</th>
      <th>Price</th>
      <th>Progress</th>
      <th>Like num</th>
      <th>Dislike num</th>
      <th>User img</th>
      <th>User name</th>
      <th>User email</th>
      <th>Paypal</th>
      <th>Friend name</th>
      <th>Friend email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.goalname %></td>
        <td><%= goal.deadline %></td>
        <td><%= goal.price %></td>
        <td><%= goal.progress %></td>
        <td><%= goal.like_num %></td>
        <td><%= goal.dislike_num %></td>
        <td><%= goal.user_img %></td>
        <td><%= goal.user_name %></td>
        <td><%= goal.user_email %></td>
        <td><%= goal.paypal %></td>
        <td><%= goal.friend_name %></td>
        <td><%= goal.friend_email %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Goal', new_goal_path %>
